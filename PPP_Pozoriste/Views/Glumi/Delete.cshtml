@model PPP_Pozoriste.Models.Glumi

@{
    ViewBag.Title = "Obrisi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Brisanje</h2>

<h3>Da li ste sigurni da želite da obrišete sledećeg glumca iz predstave  "@Html.DisplayFor(model => model.Predstava.NazivPredstave)"?</h3>
<div>
    <h4>Podaci o glumcu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Glumac.Ime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Glumac.Ime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Glumac.Prezime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Glumac.Prezime)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Predstava.NazivPredstave)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Predstava.NazivPredstave)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Povrdi brisanje" class="btn btn-default" /> |
            @Html.ActionLink("Nazad na listu", "Index")
        </div>
    }
</div>
