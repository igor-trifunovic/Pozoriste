@model IEnumerable<PPP_Pozoriste.Models.Glumi>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista dodljenih glumaca i predstava</h2>

<p>
    @Html.ActionLink("Dodeli glumca predstavi", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Glumac.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Predstava.NazivPredstave)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Glumac.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Predstava.NazivPredstave)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.GlumiID }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.GlumiID }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.GlumiID })
        </td>
    </tr>
}

</table>
